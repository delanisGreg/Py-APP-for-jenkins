pipeline {
	agent {
		label 'master'
		}
	stages {
		stage("Create docker image") {
			steps ('Build') {
				echo "========= start building image ========="
				dir ('docker/toolbox') {
					sh 'docker build . '
					}
				}
			}
		stage('Test image') {
			steps {
				 sh 'male check || true'
				 junit '**/build/test-report/*.xml'			 
			}
		}	
		stage('Push image') {
			steps{ 
				docker.withRegistry('https://ec2-34-218-253-89.us-west-2.compute.amazonaws.com', 'DockerHost') {
				app.push("${env.BUILD_NUMBER}")
				app.push("latest")
				}
			}
		}
	}
}
